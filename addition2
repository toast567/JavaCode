package addition;

import java.util.Scanner;

public class MaxRectangleOfHistogram {

	public static void main(String[] args) {

		System.out.print("Enter the quantity of rectangle: ");
		
		Scanner input = new Scanner(System.in);
		int n = input.nextInt();
		
		System.out.print("Enter the height of every rectangle: ");
		
		int[] h = new int[n];
		for(int i = 0; i < n; i++) {
			h[i] = input.nextInt();
		}
		
		int maxHeight = 0;
		for(int i = 0; i < n; i++) {
			if(h[i] > maxHeight) maxHeight = h[i];
		}
		
		int[][] histogram = new int [maxHeight][n];
		
		for(int column = 0; column < n; column++) {
			for(int row = 0; row < maxHeight; row++) {
				if(row < h[column]) histogram[row][column] = 1;
				else histogram[row][column] = 0;
			}
		}
		
		int origin = 0, width = 0, height = 0;
		int maxArea = 0, tempArea = 0;
		boolean rise = true;
		for(int column = 0; column < n; column++) {
			for(int row = 0; row < maxHeight; row++) {
				for(int k = origin; k < n; k++) {
					if(histogram[k][column] == 0) rise = false;
				}
				if(rise) height++;
				else {
					tempArea = (n - origin) * height;
					if(tempArea > maxArea) maxArea = tempArea;
					height = 0;
				}
			}
			
		}
	}

}
